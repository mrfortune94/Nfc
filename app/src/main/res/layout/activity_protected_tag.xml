<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tag Info Card (appears when tag detected) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tagInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/protools_medium_gray"
            app:strokeColor="@color/protools_neon_green"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tag_detected"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/protools_neon_green" />

                <TextView
                    android:id="@+id/tagUidText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="monospace"
                    android:textColor="@color/protools_text_primary" />

                <TextView
                    android:id="@+id/tagTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/protools_text_secondary" />

                <TextView
                    android:id="@+id/tagTechText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/protools_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Operation Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/protools_medium_gray"
            app:strokeColor="@color/protools_neon_green_dark"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_operation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/protools_neon_green" />

                <Spinner
                    android:id="@+id/operationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp"
                    android:popupBackground="@color/protools_medium_gray" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Key Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/protools_medium_gray"
            app:strokeColor="@color/protools_neon_green_dark"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/authentication_key"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/protools_neon_green" />

                <RadioGroup
                    android:id="@+id/keyTypeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/keyARadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/key_a"
                        android:textColor="@color/protools_text_primary"
                        android:buttonTint="@color/protools_neon_green"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/keyBRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="@string/key_b"
                        android:textColor="@color/protools_text_primary"
                        android:buttonTint="@color/protools_neon_green" />
                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/key_hex_hint"
                    app:boxStrokeColor="@color/protools_neon_green"
                    app:hintTextColor="@color/protools_neon_green"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/keyInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:inputType="textCapCharacters"
                        android:maxLength="12"
                        android:text="FFFFFFFFFFFF"
                        android:textColor="@color/protools_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/common_keys"
                    android:textSize="14sp"
                    android:textColor="@color/protools_text_secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/useDefaultKeyButton"
                        style="@style/OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_key"
                        android:textSize="10sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/useMadKeyButton"
                        style="@style/OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/mad_key"
                        android:textSize="10sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/useNfcForumKeyButton"
                        style="@style/OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/nfc_forum_key"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sector Selection -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sectorSelectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/protools_medium_gray"
            app:strokeColor="@color/protools_neon_green_dark"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sector_selection"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/protools_neon_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sector"
                        android:textColor="@color/protools_text_secondary" />

                    <SeekBar
                        android:id="@+id/sectorSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:max="15"
                        android:progress="0"
                        android:progressTint="@color/protools_neon_green"
                        android:thumbTint="@color/protools_neon_green" />

                    <TextView
                        android:id="@+id/sectorValueText"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/protools_neon_green"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Write Data Layout (hidden by default) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/writeDataLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/protools_medium_gray"
            app:strokeColor="@color/protools_neon_green_dark"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/write_data"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/protools_neon_green" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/block_number_hint"
                    app:boxStrokeColor="@color/protools_neon_green"
                    app:hintTextColor="@color/protools_neon_green"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/blockNumberInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/protools_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/data_hex_hint"
                    app:boxStrokeColor="@color/protools_neon_green"
                    app:hintTextColor="@color/protools_neon_green"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/writeDataInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:inputType="textCapCharacters"
                        android:maxLength="32"
                        android:textColor="@color/protools_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/write_warning"
                    android:textColor="@color/nfc_red"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Execute Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/executeButton"
            style="@style/PremiumButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/execute"
            android:enabled="false" />

        <!-- Result Display -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/protools_medium_gray"
            app:strokeColor="@color/protools_neon_green_dark"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/protools_neon_green" />

                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="monospace"
                    android:textIsSelectable="true"
                    android:textColor="@color/protools_text_primary"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
