<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_gradient_bg"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Premium Card Container for Header -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_home"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/premium_primary"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/nfcIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/scan_prompt"
                android:src="@drawable/ic_nfc_pro_logo"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/scan_prompt"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/premium_primary_dark"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerCard">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tag Info Section (appears when tag detected) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tagInfoScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <TextView
                    android:id="@+id/tagInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:padding="16dp"
                    android:textIsSelectable="true"
                    android:textColor="@color/premium_primary_dark" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Button Container -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/writeTagButton"
                    style="@style/PremiumButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/title_write"
                    app:icon="@android:drawable/ic_menu_edit"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/emulateButton"
                    style="@style/PremiumButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/title_emulate"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="textStart"
                    app:backgroundTint="@color/premium_accent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backupManagerButton"
                    style="@style/PremiumButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/title_backup"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/protectedTagButton"
                    style="@style/PremiumButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/title_protected"
                    app:icon="@android:drawable/ic_lock_lock"
                    app:iconGravity="textStart"
                    app:backgroundTint="#FF5722" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/apduConsoleButton"
                    style="@style/PremiumButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/apdu_console"
                    app:icon="@android:drawable/ic_dialog_dialer"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diagnosticsButton"
                    style="@style/PremiumButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/title_diagnostics"
                    app:icon="@android:drawable/ic_menu_info_details"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backupButton"
                    style="@style/PremiumButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/backup_card"
                    android:visibility="gone"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
